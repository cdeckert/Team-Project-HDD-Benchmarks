#include "Skippy.h"


using namespace std;

Skippy::Skippy(char *theAddress)
{
	fd = open64(theAddress, O_RDWR|O_DIRECT|O_LARGEFILE);

}

void Skippy::execute(int iteration)
{
	lseek64(fd, 512, SEEK_CUR);
	write(fd, &buffer, sizeof(buffer))
}



