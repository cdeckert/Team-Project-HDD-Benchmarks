#ifndef STOPWATCH_H_
#define STOPWATCH_H_

namespace std {

class Stopwatch {
public:
	Stopwatch();
	virtual ~Stopwatch();

	void start();
	void lap();
	void stop();
	double getLapTime(int lap);
	double getTotalTime();
private:
	list<double> lapTimeList;
};

} /* namespace std */

#endif /* STOPWATCH_H_ */
