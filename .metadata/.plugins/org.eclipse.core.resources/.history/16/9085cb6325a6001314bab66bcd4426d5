#define _LARGEFILE64_SOURCE

#include "Skippy.h"

#include <string>
#include <unistd.h>
#include <sys/types.h>
#include <stdio.h>
#include <sys/stat.h>



using namespace std;

Skippy::Skippy(char *theAddress)
{
	fd = open(theAddress, O_RDWR|O_DIRECT|O_LARGEFILE);
}

void Skippy::execute(int iteration)
{
	lseek64(fd, (off64_t) (iteration * SINGLE_SECTOR), SEEK_CUR);
}



Skippy::~Skippy() {
	// TODO Auto-generated destructor stub
}

