#include "Skippy.h"


using namespace std;

Skippy::Skippy(char *theAddress)
{
	fd = open(theAddress, O_RDWR|O_DIRECT|O_LARGEFILE);
}

void Skippy::execute(int iteration)
{
	lseek(fd, 512, SEEK_CUR);
}



