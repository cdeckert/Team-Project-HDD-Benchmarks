#define _LARGEFILE64_SOURCE




/*include <string>

#include <stdio.h>
#include <sys/stat.h>
#include <unistd.h>
*/

#include "Skippy.h"


using namespace std;

Skippy::Skippy(char *theAddress)
{
	fd = open(theAddress, O_RDWR|O_DIRECT|O_LARGEFILE);
}

void Skippy::execute(int iteration)
{
	#include <unistd.h>
	#include <sys/types.h>
	lseek(fd, (off64_t) (iteration * SINGLE_SECTOR), SEEK_CUR);
}



Skippy::~Skippy() {
	// TODO Auto-generated destructor stub
}

