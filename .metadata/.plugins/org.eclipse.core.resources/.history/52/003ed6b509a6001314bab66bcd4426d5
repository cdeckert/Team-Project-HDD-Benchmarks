#ifndef TIMER_H_
#define TIMER_H_

class Timer {
public:
	Timer();
	virtual ~Timer();
	static double getTime();
	void start();
	void end();
	void newRound();
	double getRoundTime(int round);
	double getTotalTime();
private:
	std:list<double>roundTimeList;
};

#endif /* TIMER_H_ */
